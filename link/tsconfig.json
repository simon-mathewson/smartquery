{
  "include": ["electron.vite.config.*", "seed", "src", "prisma", "../shared/**/*.ts"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "module": "ES2022",
    "strict": true,
    "target": "ES2021",
    "paths": {
      "@/*": ["../shared/*"]
    }
  }
}
