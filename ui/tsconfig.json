{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "./globals.d.ts",
    "./playwright-ct.config.ts",
    "./playwright.config.ts",
    "./playwright/**/*.ts", // Be more specific if playright only contains .ts files
    "./src/**/*.ts", // Only include .ts files within src
    "./src/**/*.tsx", // Include .tsx files for react components
    "./tailwind.config.ts"
  ],
  "exclude": [
    "../cloud", // Explicitly exclude the cloud directory
    "node_modules", // Good practice to explicitly exclude node_modules if not already
    "dist" // If you have a build output directory, exclude it too
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
